<div class="flex gap-5">
  <% for item_detail in item_details { %>
    <% if item_detail.item_type == ItemType::File { %>
      <div><%= item_detail.item_name %></div>
    <% } else if item_detail.item_type == ItemType::Folder { %>
      <div class="text-blue-400"><%= item_detail.item_name %></div>
    <% } %>
  <% } %>
</div>